@page
@model Building33MockApi.Pages.MessagesModel
@{
    <!DOCTYPE html>
    <html>
        <head>
            <title>Building 33 Mock Api Messages</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" rel="stylesheet" />
        </head>
        <body>
            <div class="container">
                <div class="row mb-3">
                    <h1>Building 33 Mock Api Messages</h1>
                </div>
                <div class="row mb-3">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete all messages</button>
                    </form>
                </div>
                <div class="row">
                    <div class="col-md-12">
                    @if (Model.Messages.Count > 0)
                    {
                        <table class="table table-bordered table-striped-columns" id="messagesTable">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Message</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var message in Model.Messages.OrderByDescending(m => m.Key))
                                {
                                    <tr>
                                        <td>@message.Key</td>
                                        <td>@message.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No messages received</p>
                    }
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
            <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('#messagesTable').DataTable({
                        columnDefs: [
                            { type: 'date', targets: 0 },
                            { orderable: false, targets: 1 }
                        ],
                        lengthMenu: [5, 10, 25, 50, 75, 100]
                    });
                });
            </script>
        </body>
    </html>
}
